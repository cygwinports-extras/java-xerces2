JAVA_CLASSPATH=
inherit java

DESCRIPTION=
HOMEPAGE="http://xerces.apache.org/xerces2-j/"
SRC_URI="mirror://apache/xerces/j/Xerces-J-src.${PV}.tar.gz
         mirror://apache/xerces/j/Xerces-J-tools.${PV}.tar.gz"
SRC_DIR="xerces-${PV//./_}"

CYGPORT_USE_UNSTABLE_API=1
src_unpack_hook() {
	rm -fr tools
	mv ../tools .
}

src_compile() {
	lndirs
	cd ${B}
	sh build.sh jars || error "build failed"
}

src_install() {
	cd ${B}
	dojar build/xercesImpl.jar
}
